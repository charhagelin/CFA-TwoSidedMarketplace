<div class="container">
<p id="notice"><%= notice %></p>


<%= image_tag @post.image.url (:large) %>
<hr>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@post.price) %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>


<p>
  <strong>User:</strong>
  <%= @post.user %>
</p>

<%= link_to 'Add to cart', new_cart_item_path(post_id: @post.id), class: "btn btn-show" %>


<%= link_to 'Edit', edit_post_path(@post) if current_user.admin? %> |
<%= link_to 'Back', posts_path, class: "btn btn-default" %>
</div>

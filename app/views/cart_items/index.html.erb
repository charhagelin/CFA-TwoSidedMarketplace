
<p id="notice"><%= notice %></p>

<div class="shopping-cart">

  <div class = "container">
  <div class="title-box">
    <h1>Your shopping cart</h1>
  </div>
<div class="cart-content">
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Artwork</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><div class="img">  <%= image_tag cart_item.post.image.url (:thumb) %> </div></td>
        <td><%= cart_item.post.title %></td>
        <td><%= number_to_currency(cart_item.post.price) %></td>
        <td><%= link_to 'Remove from cart', cart_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>

    <% end %>



  </tbody>


</table>

<h2> the total amount is : <%=number_to_currency(@total) %> </h2>
<%= render 'partials/stripe' %>

</div>
</div>
</div>
